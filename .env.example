# ============================================
# RAILWAY DEPLOYMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# DJANGO SETTINGS
# ============================================

# Secret key for Django (generate a new one for production)
# Run: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-in-production

# Debug mode (NEVER True in production)
DEBUG=False

# Allowed hosts (comma separated, use your Railway domain)
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.up.railway.app

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection URL (Railway will provide this)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/smart_home_dev

# ============================================
# REDIS/CACHE CONFIGURATION
# ============================================

# Redis connection URL (for WebSockets and caching)
# Format: redis://[:password]@localhost:6379
REDIS_URL=redis://localhost:6379

# ============================================
# RAILWAY DEPLOYMENT SETTINGS
# ============================================

# Your Railway app's external hostname (provided by Railway)
RAILWAY_EXTERNAL_HOSTNAME=your-app-name.up.railway.app

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# Custom domain (if using custom domain instead of Railway domain)
# CUSTOM_DOMAIN=yourdomain.com

# Render hostname (if migrating from Render)
# RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# ============================================
# LOGGING
# ============================================

# Logging level
LOG_LEVEL=INFO

# ============================================
# SECURITY (RAILWAY AUTO-CONFIGURED)
# ============================================

# These are typically auto-configured by Railway/platform
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
