# ============================================
# FLY.IO DEPLOYMENT ENVIRONMENT VARIABLES
# ============================================
# Set these using: flyctl secrets set KEY=VALUE

# ============================================
# DJANGO SETTINGS
# ============================================

# Secret key for Django (generate a new one for production)
# Run: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-in-production

# Debug mode (NEVER True in production)
DEBUG=False

# Allowed hosts (comma separated, Fly.io auto-provides your domain)
ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.fly.dev

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection URL (set via flyctl postgres create or connection string)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@postgres-server.fly-postgres.internal:5432/smart_home

# ============================================
# REDIS/CACHE CONFIGURATION
# ============================================

# Redis connection URL (set via flyctl redis create or connection string)
# Format: redis://[:password]@host:port
REDIS_URL=redis://redis-server.fly-redis.internal:6379

# ============================================
# FLY.IO DEPLOYMENT SETTINGS
# ============================================

# Your Fly.io app name (auto-set by Fly.io)
FLY_APP_NAME=your-app-name

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# Custom domain (if using custom domain instead of fly.dev)
# CUSTOM_DOMAIN=yourdomain.com

# Render hostname (if migrating from Render)
# RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# ============================================
# LOGGING
# ============================================

# Logging level
LOG_LEVEL=INFO

# ============================================
# PYTHON SETTINGS
# ============================================

# Unbuffered output for Fly.io logs
PYTHONUNBUFFERED=1

# Port (Fly.io default)
PORT=8000

